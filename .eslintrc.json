{
  "extends": "airbnb-base",
  "rules": {
    "no-underscore-dangle": ["error", {
      "allow": [ "_id" ]
    }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "quotes": [2, "double", { "avoidEscape": true }],
    "comma-dangle": ["error", "never"]
  },
  "env": {
    "node": true,
    "mocha": true
  },
  "plugins": [
    "mocha"
  ]
}
